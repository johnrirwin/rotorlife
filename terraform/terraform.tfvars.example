# Example Terraform variables file
# Copy to terraform.tfvars and fill in values

aws_region  = "us-east-1"
environment = "production"
app_name    = "flyingforge"

# Database
db_instance_class    = "db.t3.micro"
db_allocated_storage = 20
db_name              = "flyingforge"
db_username          = "flyingforge"

# Redis
redis_node_type = "cache.t3.micro"

# ECS
server_cpu           = 512
server_memory        = 1024
web_cpu              = 256
web_memory           = 512
server_desired_count = 2
web_desired_count    = 2
news_refresh_cpu     = 256
news_refresh_memory  = 512

# Scheduled one-shot feed refresh (4:00 PM in configured timezone).
enable_scheduled_news_refresh = true
news_refresh_schedule_expression = "cron(0 16 * * ? *)"
news_refresh_schedule_timezone   = "America/New_York"

# NAT optimization: bypass NAT for AWS service traffic from private subnets.
enable_vpc_endpoints    = true
enable_kms_vpc_endpoint = true

# Optional endpoint policy extensions (add only when needed).
# vpc_endpoint_subnet_ids               = []
# additional_ecr_repository_arns        = []
# additional_cloudwatch_log_group_arns  = []
# additional_secretsmanager_secret_arns = []
# additional_s3_gateway_bucket_arns     = []

# Domain (optional - leave empty if not using custom domain)
domain_name       = ""
create_dns_record = false

# Secrets (set via environment variables or -var flag, NOT in this file)
# google_client_id     = ""
# google_client_secret = ""
# encryption_key       = ""
