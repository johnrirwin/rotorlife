FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY web/package.json web/package-lock.json* ./

# Install dependencies
RUN npm install

# Copy source
COPY web/ .

# Build
ARG VITE_API_BASE_URL
ARG VITE_GOOGLE_CLIENT_ID
ARG VITE_API_URL
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
ENV VITE_GOOGLE_CLIENT_ID=$VITE_GOOGLE_CLIENT_ID
ENV VITE_API_URL=$VITE_API_URL
RUN npm run build

# Nginx runtime
FROM nginx:alpine

COPY --from=builder /app/dist /usr/share/nginx/html

# Use ECS config for production (ALB handles API routing)
# Use nginx.conf for local Docker Compose (proxy to server container)
ARG NGINX_CONFIG=nginx.ecs.conf
COPY web/${NGINX_CONFIG} /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
